{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "echo \"[cs] $(date +%Y-%m-%dT%H:%M:%S) Prompt received\" >> .claude/session.log 2>/dev/null || true"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "echo \"[cs] $(date +%Y-%m-%dT%H:%M:%S) Session ended\" >> .claude/session.log 2>/dev/null || true"
      }
    ]
  }
}
