{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "echo '[cs] Prompt received' >> .claude/session.log 2>/dev/null || true"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "echo \"[cs] Session ended: $(date)\" >> .claude/session.log 2>/dev/null || true"
      }
    ]
  }
}
