{
  "name": "claude-conductor",
  "version": "2.0.0",
  "description": "AI-assisted development platform with schema-validated components",
  "author": "Claude Conductor Team",
  "license": "MIT",
  "keywords": [
    "ai",
    "development",
    "automation",
    "claude",
    "orchestration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thebiglaskowski/claude-conductor.git"
  },
  "scripts": {
    "validate": "python tools/validate.py",
    "validate:skills": "python tools/validate.py --schema skill",
    "validate:commands": "python tools/validate.py --schema command",
    "validate:gates": "python tools/validate.py --schema gate",
    "docs": "python tools/generate-docs.py",
    "docs:serve": "python tools/generate-docs.py --serve",
    "deps": "python tools/check-deps.py",
    "deps:graph": "python tools/check-deps.py --graph",
    "state:render": "python tools/render-state.py",
    "migrate": "python tools/migrate.py",
    "init": "python tools/init.py",
    "test": "pytest tests/",
    "test:integration": "pytest tests/integration/",
    "lint": "ruff check tools/",
    "format": "ruff format tools/"
  },
  "engines": {
    "python": ">=3.10"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "files": [
    "schemas/",
    "core/",
    "phases/",
    "gates/",
    "skills/",
    "commands/",
    "agents/",
    "patterns/",
    "rules/",
    "events/",
    "state/",
    "config/",
    "templates/",
    "tools/"
  ]
}
