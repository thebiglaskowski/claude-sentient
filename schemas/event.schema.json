{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude-sentient.dev/schemas/event.schema.json",
  "title": "Event Definition",
  "description": "Schema for pub/sub event definitions",
  "type": "object",
  "required": ["name", "payload"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z]+\\.[a-z]+\\.[a-z]+$",
      "description": "Event name in format: category.entity.action"
    },
    "description": {
      "type": "string",
      "description": "What this event represents"
    },
    "payload": {
      "type": "object",
      "description": "JSON Schema for the event payload"
    },
    "emitters": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Components that emit this event"
    },
    "subscribers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Components that handle this event"
    },
    "async": {
      "type": "boolean",
      "default": true,
      "description": "Whether handlers run asynchronously"
    },
    "retryable": {
      "type": "boolean",
      "default": false,
      "description": "Whether failed handlers should retry"
    }
  }
}
