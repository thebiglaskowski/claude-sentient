{
  "protected": [
    { "pattern": "^/etc/", "reason": "System configuration" },
    { "pattern": "^/usr/", "reason": "System binaries" },
    { "pattern": "^/bin/", "reason": "System binaries" },
    { "pattern": "^/sbin/", "reason": "System binaries" },
    { "pattern": "^C:/Windows/", "reason": "Windows system directory", "flags": "i" },
    { "pattern": "^C:/Program Files", "reason": "Windows programs", "flags": "i" },
    { "pattern": "(^|/)\\.ssh/", "reason": "SSH keys" },
    { "pattern": "(^|/)\\.gnupg/", "reason": "GPG keys" },
    { "pattern": "(^|/)\\.aws/credentials$", "reason": "AWS credentials" },
    { "pattern": "(^|/)\\.env\\.production$", "reason": "Production environment" },
    { "pattern": "(^|/)\\.git/objects/", "reason": "Git internals" },
    { "pattern": "(^|/)\\.git/refs/", "reason": "Git internals" },
    { "pattern": "(^|/)\\.git/HEAD$", "reason": "Git internals" }
  ],
  "sensitive": [
    { "pattern": "(^|/)\\.env$", "reason": "Environment file" },
    { "pattern": "(^|/)\\.env\\.local$", "reason": "Local environment file" },
    { "pattern": "secrets?\\.", "reason": "Secrets file" },
    { "pattern": "credentials?\\.", "reason": "Credentials file" },
    { "pattern": "password", "reason": "Password file" },
    { "pattern": "api[_-]?key", "reason": "API key file" },
    { "pattern": "\\.pem$", "reason": "Certificate file" },
    { "pattern": "\\.key$", "reason": "Key file" },
    { "pattern": "id_rsa", "reason": "SSH private key" },
    { "pattern": "id_ed25519", "reason": "SSH private key" }
  ]
}
